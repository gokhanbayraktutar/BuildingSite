@model BuildingSite.Model.EntityModels.ViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--====================  breadcrumb area ====================-->
<div class="page-breadcrumb bg-img space__bottom--r120" data-bg="/Upload/Image/@Model.SiteConstantModel.PictureOurService">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="page-breadcrumb-content text-center">
                    <h1>@Model.ProjectModel.Header</h1>
                    <ul class="page-breadcrumb-links">
                        <li><a href="/Home/Index">Anasayfa</a></li>
                        <li><a href="/Project/Index">Projeler</a></li>
                        <li>@Model.ProjectModel.Header</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====================  End of breadcrumb area  ====================-->
<!--====================  project details area ====================-->
<div class="project-section space__bottom--r120">
    <div class="container">

        <div class="row">
            <div class="col-lg-8 col-12 order-1 order-lg-2">
                <div class="service-details">
                    <div class="service-gallery">
                        <div class="service-gallery__wrapper">
                            <div class="service-gallery__single-slide">
                                <div class="item">
                                    <img src="~/Upload/Image/@Model.ProjectModel.Picture" style="width:700px; height:400px" class="img-fluid" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content space__top--30">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="space__bottom--15">@Model.ProjectModel.Header</h3>
                                <p>@Model.ProjectModel.Content</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-12  ">
                <div class="sidebar">
                    <h3 class="sidebar-title">Proje Kategoriler</h3>
                    <ul class="sidebar-list">
                        @foreach (var projectCategory in Model.ProjectCategoryModels)
                        {
                            <li><a href="/ProjectCategory/Index/@projectCategory.Id">@projectCategory.Name</a></li>
                        }

                    </ul>
                </div>
            </div>

        </div>
        <div class="row space__top--30" >
            <div class="col-12">
                <div class="row row-5 image-popup">
                    <div class="col-xl-3 col-lg-4 col-sm-6 col-12 space__top--10">
                        <a href="~/Upload/Image/@Model.ProjectModel.Picture" class="gallery-item single-gallery-thumb"><img src="~/Upload/Image/@Model.ProjectModel.Picture" class="img-fluid" alt="" style="height:233px"><span class="plus"></span></a>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-sm-6 col-12 space__top--10">
                        <a href="~/Content/assets/img/projects/project2-m.jpg" class="gallery-item single-gallery-thumb"><img src="~/Content/assets/img/projects/project2-m.jpg" class="img-fluid" alt=""><span class="plus"></span></a>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-sm-6 col-12 space__top--10">
                        <a href="~/Content/assets/img/projects/project3-m.jpg" class="gallery-item single-gallery-thumb"><img src="~/Content/assets/img/projects/project3-m.jpg" class="img-fluid" alt=""><span class="plus"></span></a>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-sm-6 col-12 space__top--10">
                        <a href="~/Content/assets/img/projects/project4-m.jpg" class="gallery-item single-gallery-thumb"><img src="~/Content/assets/img/projects/project4-m.jpg" class="img-fluid" alt=""><span class="plus"></span></a>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-sm-6 col-12 space__top--10">
                        <a href="~/Content/assets/img/projects/project5-m.jpg" class="gallery-item single-gallery-thumb"><img src="~/Content/assets/img/projects/project5-m.jpg" class="img-fluid" alt=""><span class="plus"></span></a>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-sm-6 col-12 space__top--10">
                        <a href="~/Content/assets/img/projects/project6-m.jpg" class="gallery-item single-gallery-thumb"><img src="~/Content/assets/img/projects/project6-m.jpg" class="img-fluid" alt=""><span class="plus"></span></a>
                    </div>
                </div>
            </div>
        </div>
      
    </div>
</div>
<!--====================  End of project details area  ====================-->
