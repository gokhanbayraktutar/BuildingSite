@model BuildingSite.Model.EntityModels.ViewModel
@{
    ViewBag.Title = "Home Page";
}

<!--====================  hero slider area ====================-->
<div class="hero-slider-area space__bottom--r120">
    
    <div class="hero-slick-slider-wrapper">
        @foreach (var slider in Model.sliderModels)
        {

            <div class="single-hero-slider single-hero-slider--background single-hero-slider--overlay position-relative bg-img" data-bg="/Upload/Image/@slider.Picture">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- hero slider content -->
                            <div class="hero-slider-content hero-slider-content--extra-space">
                                <h3 class="hero-slider-content__subtitle">@slider.Header</h3>
                                <h2 class="hero-slider-content__title space__bottom--50">
                                   @slider.Content
                                </h2>
                                <a href="contact.html" class="default-btn default-btn--hero-slider">Bize Ulaşın</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
   
</div>
<!--====================  End of hero slider area  ====================-->