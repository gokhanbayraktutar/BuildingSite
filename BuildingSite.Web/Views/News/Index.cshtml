@model BuildingSite.Model.EntityModels.ViewModel
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--====================  breadcrumb area ====================-->
<div class="page-breadcrumb bg-img space__bottom--r120" data-bg="/Upload/Image/@Model.SiteConstantModel.PictureOurService" style="height:250px" >
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="page-breadcrumb-content text-center">
                    <h1>Haberler</h1>
                    <ul class="page-breadcrumb-links">
                        <li><a href="/Home/Index">Anasayfa</a></li>
                        <li>Haberler</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====================  End of breadcrumb area  ====================-->

<!--====================  blog area ====================-->
<div class="blog-section space__bottom--r120" >
    <div class="container">
        <div class="row" style="margin-bottom:5px">
            <div class="col-lg-12 col-12 order-1 order-lg-2" id="news">
                <div class="row" style="margin-bottom:5px">

                    @foreach (var news in Model.Newses)
                    {
                        <div class="col-lg-3 col-md-6 col-12">
                            <div class="blog-post-slider__single-slide blog-post-slider__single-slide--grid-view">
                                <div class="blog-post-slider__image space__bottom--30">
                                    <a href="/News/Detail/@news.Id"><img src="~/Upload/Image/@news.Picture" class="img-fluid" alt=""></a>
                                </div>
                                <div class="blog-post-slider__content">
                                    <p class="post-date"> @Convert.ToDateTime(news.Date).ToShortDateString()</p>
                                    <h3 class="post-title">
                                        <a href="/News/Detail/@news.Id">@news.Header</a>
                                    </h3>
                                    <p class="post-excerpt">
                                        @news.Description
                                    </p>
                                    <a href="/News/Detail/@news.Id" class="see-more-link">Daha fazla oku</a>
                                </div>
                            </div>
                        </div>
                    }
                    

                </div>
                <div >
                    <center>
                        @Html.PagedListPager(
            Model.Newses,
            page => Url.Action("Pager", new { page = page }),
            PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "news" })
            )
                    </center>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====================  End of blog area  ====================-->