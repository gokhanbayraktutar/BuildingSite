@model BuildingSite.Model.EntityModels.ViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--====================  breadcrumb area ====================-->
<div class="page-breadcrumb bg-img space__bottom--r120" data-bg="/Upload/Image/@Model.SiteConstantModel.PictureOurService" style="height:250px">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="page-breadcrumb-content text-center">
                    <h1>@Model.NewsModel.Header</h1>
                    <ul class="page-breadcrumb-links">
                        <li><a href="/Home/Index">Anasayfa</a></li>
                        <li><a href="/News/Index">Haberler</a></li>
                        <li>@Model.NewsModel.Header</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====================  End of breadcrumb area  ====================-->
<!--====================  blog details ====================-->
<div class="blog-section space__bottom--r120">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12 order-1 order-lg-2">
                <div class="row">
                    <div class="blog-details col-12">
                        <div class="blog-inner">
                            <div class="media">
                                <div class="image"><img src="/Upload/Image/@Model.NewsModel.Picture" style="width:750px; height:400px" alt=""></div>
                            </div>
                            <div class="content">
                                <ul class="meta">
                                    <li>@Convert.ToDateTime(Model.NewsModel.Date).ToShortDateString()</li>
                                </ul>
                                <h2 class="title">@Model.NewsModel.Header</h2>
                                <div class="desc space__bottom--30">
                                    <p>@Model.NewsModel.Content</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-12 space__top__md--50 space__top__lm--50 order-2 order-lg-1">
                <div class="sidebar">
                    <h3 class="sidebar-title">Son Haberler</h3>
                    @foreach (var news in Model.newsModels.Take(5))
                    {
                        <div class="sidebar-blog">
                            <a href="/News/Detail/@news.Id" class="image"><img src="/Upload/Image/@news.Picture" alt=""></a>
                            <div class="content">
                                <h5>
                                    <a href="/News/Detail/@news.Id">@news.Header</a>
                                </h5>
                                <span>@Convert.ToDateTime(news.Date).ToShortDateString()</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--====================  End of blog details  ====================-->
