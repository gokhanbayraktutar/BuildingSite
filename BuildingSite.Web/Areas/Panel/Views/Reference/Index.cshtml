@model List<BuildingSite.Model.EntityModels.ReferenceModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}



<div class="page-body">
    <div class="row">
        <div class="col-sm-12">

            <div class="card">
                <div class="card-header">
                    <h5>Referans Listesi</h5>
                </div>
                <div>
                    <a href="/Panel/Reference/Create" class="btn btn-primary" style="float:right; margin-right:50px">Yeni Ekle</a>
                </div>
                <div class="card-block">
                    <div class="dt-responsive table-responsive">
                        <table id="dom-table" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>Firma Adı</th>
                                    <th>Resim</th>
                                    <th>Link</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.Id">
                                        <td>@item.CompanyName</td>
                                        <td> <img src="~/Upload/Image/@item.Picture" style="width:100px" /></td>
                                        <td>@item.Link</td>
                                        <td>
                                            <a href="/Panel/Reference/Edit/@item.Id" class="btn btn-primary">Düzenle</a>&nbsp;&nbsp;&nbsp;
                                            <a href="#"  onclick="Delete(@item.Id)" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Firma Adı</th>
                                    <th>Resim</th>
                                    <th>Link</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="mymodal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Referans Silme işlemi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4>Emin misin?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-success" onclick="ConfDeleteNote()">Sil</button>
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="hiddenitemId" />

<script>

    var Delete = function (Id) {
        $('#hiddenitemId').val(Id);
        $('#mymodal').modal('show');
    };

    var ConfDeleteNote = function () {
        var Id = $("#hiddenitemId").val();

        $.ajax({
            type: "POST",
            url: '/Panel/Reference/Delete',
            data: { id: Id },
            success: function (result) {
                $('#mymodal').modal('hide');
                $('#row_' + Id).remove();

            },
            error: function () {
            }
        });



    };
</script>
