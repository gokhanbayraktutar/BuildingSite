@model BuildingSite.Model.EntityModels.OurServiceModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div class="card" style="margin-top:10px">
    <div class="card-header">
        <h5>Hizmetlerimiz Bilgileri Ekleme</h5>
        <hr />
        <div class="card-header-right"><i class="icofont icofont-spinner-alt-5"></i></div>
    </div>


    <div class="card-block">
        <form enctype="multipart/form-data" method="post" role="form">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Başlık</label>
                <div class="col-sm-5">
                    <input type="text" name="Header" class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Açıklama</label>
                <div class="col-sm-5">
                    <input type="text" name="Description" class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">İçerik</label>
                <div class="col-sm-5">
                    <input type="text" name="Content" class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Resim</label>
                <div class="col-sm-5">
                    <input type="file" name="ImageFile" required class="form-control">
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col-sm-2">Aktiflik</div>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Active" value="true" id="gridCheck1">
                        <label class="form-check-label" for="gridCheck1">
                            Aktif mi?
                        </label>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <div class="col-lg-7" style="float:right">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button class="btn btn-danger">İptal et</button>
                </div>
            </div>
        </form>
    </div>
</div>

