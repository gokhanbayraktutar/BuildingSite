@model BuildingSite.Model.EntityModels.ViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model.AdminModels)
{
    <div class="card" style="margin-top:10px">
        <div class="card-header">
            <h5>Kullanıcı Bilgileri Düzenleme</h5>
            <hr />
            <div class="card-header-right"><i class="icofont icofont-spinner-alt-5"></i></div>
        </div>

        <div class="card-block">
            <form enctype="multipart/form-data" method="post" role="form">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                    <div class="col-sm-5">
                        <input type="text" name="UserName" value="@item.UserName" required class="form-control form-control-normal">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Şifre</label>
                    <div class="col-sm-5">
                        <input type="text" name="Password" value="@item.Password" required class="form-control form-control-normal">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Mail</label>
                    <div class="col-sm-5">
                        <input type="text" name="Email" value="@item.Email" required class="form-control form-control-normal">
                    </div>
                </div>

                <div class="card-block">
                    <div class="col-lg-7" style="float:right">
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <button class="btn btn-danger">İptal et</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}