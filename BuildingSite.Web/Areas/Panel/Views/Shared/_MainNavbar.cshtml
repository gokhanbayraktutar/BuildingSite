
@{
    BuildingSite.Data.Context.DataContext db = new BuildingSite.Data.Context.DataContext();

    BuildingSite.Services.Repository.InboxService inboxService = new BuildingSite.Services.Repository.InboxService(db);

    var model = inboxService.GetAll().Where(x => x.Read == false).ToList();

    int count = model.Count;
}
<nav class="navbar header-navbar pcoded-header">
    <div class="navbar-wrapper">
        <div class="navbar-logo">
            @*<a class="mobile-menu" id="mobile-collapse" href="#!">
                    <i class="feather icon-menu"></i>
                </a>*@
            <div class="row">
                <div class="col-sm-5">
                    <a href="index.html">
                        <img src="~/Upload/Image/@{ Html.RenderAction("Logo", "SiteConstant"); }" width="100" @*style="border-radius: 50%;"*@ alt="Theme-Logo" />
                    </a>
                </div>
                <div class="col-sm-7" style="color: #fff;font-weight: bold;font-size: 25px;text-transform: uppercase;">
                    @{ Html.RenderAction("Header", "SiteConstant"); }
                </div>
            </div>
            <a class="mobile-options">
                <i class="feather icon-more-horizontal"></i>
            </a>
        </div>
        <div class="navbar-container container-fluid">
            <ul class="nav-left">
                <li>
                    <a href="#!" onclick="javascript:toggleFullScreen()">
                        <i class="feather icon-maximize full-screen"></i>
                    </a>
                </li>
            </ul>
            <ul class="nav-right">
                <li class="header-notification">
                    <div class="dropdown-primary dropdown">
                        <div class="dropdown-toggle" data-toggle="dropdown">
                            <i class="feather icon-bell"></i>
                            <span class="badge bg-c-pink">@count</span>
                        </div>
                        <ul class="show-notification notification-view dropdown-menu" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut">
                            <li>
                                <h6>Gelen Mesajlar</h6>
                                @*<label class="label label-danger"> <a href="/Panel/Inbox/Index">Tüm Mesajlara Git</a></label>*@
                            </li>
                            @if (count != 0)
                            {
                                foreach (var item in model.Take(4))
                                {

                                    <li>

                                        <a href="/Panel/Inbox/Edit/@item.Id">
                                            <div class="media-body">
                                                <h5 class="notification-user">@item.Name</h5>
                                                <p class="notification-msg">@item.Messsage</p>
                                                @*<span class="notification-time">
                                                    </span>*@
                                            </div>
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li>
                                    <p class="notification-msg">Okunmamış mesajınız bulunmamaktadır!</p>
                                </li>
                            }
                        </ul>


                    </div>
                </li>
                <li class="user-profile header-notification">
                    <div class="dropdown-primary dropdown">
                        <div class="dropdown-toggle" data-toggle="dropdown">
                            <span> @Session["FullName"]</span>
                            <i class="feather icon-chevron-down"></i>
                        </div>
                        <ul class="show-notification profile-notification dropdown-menu" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut">
                            <li>
                                <a href="/Account/Logout">
                                    <i class="feather icon-log-out"></i> Çıkış Yap
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>