@model BuildingSite.Model.EntityModels.ContactPageModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div class="card" style="margin-bottom:10px;">
    <div class="card-block">
        <div>
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a href="/Panel/Anasayfa/Index">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/Panel/Anasayfa/Index">Anasayfa</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/Panel/ContactPage/Edit/1">İletişim İşlemleri</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="card" style="margin-top:10px">
    <div class="card-header">
        <h5>İletişim Bilgileri Düzenleme</h5>
        <hr />
        <div class="card-header-right"><i class="icofont icofont-spinner-alt-5"></i></div>
    </div>


    <div class="card-block">
        <form enctype="multipart/form-data" method="post" role="form">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Adres</label>
                <div class="col-sm-5">
                    @*<textarea rows="5" cols="5" name="Adres" value="@Model.Adres" required class="form-control" ></textarea>*@
                    <input type="text" name="Adres" value="@Model.Adres" required class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email-1</label>
                <div class="col-sm-5">
                    <input type="text" name="Email1" value="@Model.Email1" required class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email-2</label>
                <div class="col-sm-5">
                    <input type="text" name="Email2" value="@Model.Email2" class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Telefon</label>
                <div class="col-sm-5">
                    <input type="text" name="Telefon" value="@Model.Telefon" required class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Faks</label>
                <div class="col-sm-5">
                    <input type="text" name="Faks" value="@Model.Faks" class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">GSM</label>
                <div class="col-sm-5">
                    <input type="text" name="Gsm" value="@Model.Gsm" class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Facebook</label>
                <div class="col-sm-5">
                    <input type="text" name="Facebook" value="@Model.Facebook" class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Instagram</label>
                <div class="col-sm-5">
                    <input type="text" name="Instagram" value="@Model.Instagram" class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Twitter</label>
                <div class="col-sm-5">
                    <input type="text" name="Twitter" value="@Model.Twitter" class="form-control form-control-normal">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Linkedin</label>
                <div class="col-sm-5">
                    <input type="text" name="Linkedin" value="@Model.Linkedin" class="form-control form-control-normal">
                </div>
            </div>
            <div class="card-block">
                <div class="col-lg-7" style="float:right">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button class="btn btn-danger">İptal et</button>
                </div>
            </div>
        </form>
    </div>
</div>