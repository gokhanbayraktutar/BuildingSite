@model List<BuildingSite.Model.EntityModels.InboxModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">

            <div class="card">
                <div class="card-header">
                    <h5>Gelen Mesaj Listesi</h5>
                </div>
                <div class="card-block">
                    <div class="dt-responsive table-responsive">
                        <table id="dom-table" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>Adı Soyadı</th>
                                    <th>Tarih</th>
                                    <th>Okundu Durumu</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var msg in Model)
                                {
                                <tr>
                                    <td>@msg.Name</td>
                                    <td>@Convert.ToDateTime(msg.DateTime).ToShortDateString()</td>
                                    @if (msg.Read == true)
                                    {
                                        <td>Evet</td>
                                    }
                                    else
                                    { <td>Hayır</td>}
                                    <td>
                                        <a href="/Panel/Inbox/Edit/@msg.Id" class="btn btn-primary">Düzenle</a>&nbsp;&nbsp;&nbsp;<a href="/Panel/Inbox/Delete/@msg.Id"  class="btn btn-danger">Sil</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Adı Soyadı</th>
                                    <th>Tarih</th>
                                    <th>Okundu Durumu</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

