@model BuildingSite.Model.EntityModels.Project_PictureModel
 @{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div class="card" style="margin-top:10px">
    <div class="card-header">
        <h5>Proje Resim Bilgileri Ekleme</h5>
        <hr />
        <div class="card-header-right"><i class="icofont icofont-spinner-alt-5"></i></div>
    </div>


    <div class="card-block">
        <form enctype="multipart/form-data" method="post" role="form">
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Proje Adı:</label>
                <div class="col-sm-5">
                    <select class="form-control" name="ProjectId" required>

                        @foreach (var project in Model.ProjectModels)
                        {
                            <option value="@project.Id">@project.Header</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Resim</label>
                <div class="col-sm-5">
                    <input type="file" name="ImageFile" required class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sıralama</label>
                <div class="col-sm-5">
                    <input type="text" name="Sorting" required class="form-control form-control-normal">
                </div>
            </div>
            <div class="card-block">
                <div class="col-lg-7" style="float:right">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button class="btn btn-danger">İptal et</button>
                </div>
            </div>
        </form>
    </div>
</div>

