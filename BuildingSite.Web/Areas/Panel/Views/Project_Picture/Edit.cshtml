@model BuildingSite.Model.EntityModels.Project_PictureModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="card" style="margin-bottom:10px;">
    <div class="card-block">
        <div>
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a href="/Panel/Anasayfa/Index">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/Panel/Anasayfa/Index">Anasayfa</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/Panel/Project_Picture/Index">Proje Resim İşlemleri</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="card" style="margin-top:10px">
    <div class="card-header">
        <h5>Proje Resim Bilgileri Düzenleme</h5>
        <hr />
        <div class="card-header-right"><i class="icofont icofont-spinner-alt-5"></i></div>
    </div>


    <div class="card-block">
        <form enctype="multipart/form-data" method="post" role="form">
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Proje Adı:</label>
                <label class="col-form-label col-sm-10">@Model.ProjectModel.Header</label>
            </div>
           
            
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Resim:</label>
                <div class="col-sm-3">
                    <input type="file" name="ImageFile" value="@Model.ImageFile;"  id="imageFile" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-5">
                    @if (Model.Picture != null)
                    {
                        <img src="~/Upload/Image/@Model.Picture" width="100" />
                    }
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sıralama:</label>
                <div class="col-sm-2">
                    <input type="text" name="Sorting" value="@Model.Sorting" required class="form-control form-control-normal">
                </div>
            </div>
            <div class="card-block">
                <div class="col-lg-7" style="float:right">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button class="btn btn-danger">İptal et</button>
                </div>
            </div>
        </form>
    </div>
</div>

