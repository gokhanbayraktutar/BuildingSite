@model List<BuildingSite.Model.EntityModels.Project_PictureModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">

            <div class="card">
                <div class="card-header">
                    <h5>Proje Resim  Listesi</h5>
                </div>
                <div>
                    <a href="/Panel/Project_Picture/Create" class="btn btn-primary" style="float:right; margin-right:50px">Yeni Ekle</a>
                </div>
                <div class="card-block">
                    <div class="dt-responsive table-responsive">
                        <table id="dom-table" class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>Proje Adı</th>
                                    <th>Resim</th>
                                    <th>Sıralama</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr >
                                        <td>@item.ProjectModel.Header</td>
                                        <td> <img src="~/Upload/Image/@item.Picture" style="width:100px; height:100px" /></td>
                                        <td>@item.Sorting</td>
                                        <td>
                                            <a href="/Panel/Project_Picture/Edit/@item.Id" class="btn btn-primary">Düzenle</a>&nbsp;&nbsp;&nbsp;
                                            <a href="/Panel/Project_Picture/Delete/@item.Id"  class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Proje Adı</th>
                                    <th>Resim</th>
                                    <th>Sıralama</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

